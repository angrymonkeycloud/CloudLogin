@page "/"
@using AngryMonkey.CloudLogin;
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject CloudLoginClient cloudLogin
@inject NavigationManager nav
@inject IHttpContextAccessor HttpContextAccessor

@if (!IsAuthorized)
{
    @if (Show)
    {
        <AngryMonkey.CloudLogin.CloudLoginComponent Logo="https://thehealthbarme.com/img/logo.svg"
                                   ActionState="@actionState"
                                   CurrentUser="@CurrentUser"
                                   DomainName="@domainName" />
    }
}
else
{
    <span>You are succefully logged on with @CurrentUser.DisplayName</span>
    <a href="./cloudlogin/logout">Logout</a>
}